@model IEnumerable<VoresWebshop.Models.Produkt>

@{
    ViewBag.Title = "Produkt side";
    Layout = "~/Views/Shared/_homepageBasis.cshtml";
}

<body>
    <h2>Produkter</h2>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Navn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pris)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KortBeskrivelse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Beskrivelse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Billede)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Oprettet)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Navn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pris)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KortBeskrivelse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Beskrivelse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Billede)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Oprettet)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.ProduktID }) |
                @Html.ActionLink("Details", "Details", new { id=item.ProduktID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.ProduktID })
            </td>
        </tr>
    }
    
    </table>
</body>
